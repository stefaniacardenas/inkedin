<%= render 'form' %>

<body>

	Welcome to Flickagram!

	<div class= "New post">

		<% if @posts.none? %>
			
			No posts yet
		
		<%else%>
			
			<% @posts.each do |post| %>
				
				<h2><%= post.title %></h2>
				<p><%= post.description %></p>
				<%= image_tag post.picture.url(:medium), class: 'uploaded-pic' %>
			
				<% end %>
			
			<% end %>
		
		</div>

		<div>

			 <%= link_to 'New post', new_post_path %>

		</div>

	 <p class="notice"><%= notice %></p>
   <p class="alert"><%= alert %></p>

