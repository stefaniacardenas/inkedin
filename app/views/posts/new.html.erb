<div class="post-form">

	<%= form_for @post do |f| %>
		<%= f.label :title%>
		<%= f.text_field :title %>
		
		<%=f.label :description %>
		<%=f.text_field :description %>

		<%= f.label :picture %>
		<%= f.file_field :picture %>

		<%= f.label :tag_names, 'Tags' %>
		<%= f.text_field :tag_names %>

		<%= f.submit "Post it!"%>

	<%end%>

</div>