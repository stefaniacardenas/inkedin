<!DOCTYPE html>
<html>
<head>
  <title>Flickagram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

	<body>

      <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-container">

          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>           

          <div class="row">
            <div class="home-button col-xs-2">
              <button type="button" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-home"></span>
              </button>
            </div>

            <div class="brand col-xs-4">
              <a class="navbar-brand" href="/">Flickagram</a>
            </div>

            <div class="navbar-collapse collapse col-xs-4">
              <% if user_signed_in? %>
                <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-md btn-danger" %>
              <%else%>

                <div class="navbar-form navbar-right form-group">
                  <%= form_tag session_path(:user) do %>
                    <%= text_field_tag 'user[email]', nil, placeholder: 'Email', class: "form-control" %>
                    <%= password_field_tag 'user[password]', nil, placeholder: 'Password', class: "form-control" %>
                    <button class= "btn btn-md btn-success">Sign in</button>
                    <p>
                      <%= check_box_tag 'user[remember_me]' %>
                      <%= label_tag 'user[remember_me]', 'Remember me' %>
                    </p>
                  <%end%>
                  <%end%>
                </div>
            </div>
          </div>

        </div><!--/.navbar-collapse -->  
      </div>
   
  <%= yield %>

    <div class="container">
      <footer>
        <p>&copy; Stefania F. Cardenas - Makers Academy - March 2014</p>
      </footer>
  	</div> 

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>

  </body>
</html>
